<%= simple_form_for(@cliente) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :cpf %>
    <%= f.input :endereco %>
    <%= f.input :cidade %>
    <%= f.input :uf %>
    <%= f.input :fone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
