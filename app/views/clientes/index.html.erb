<div class="container">
  <p id="notice"><%= notice %></p>


  <h1>Clientes</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cpf</th>
        <th>Endereco</th>
        <th>Cidade</th>
        <th>Uf</th>
        <th>Fone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.nome %></td>
          <td><%= cliente.cpf %></td>
          <td><%= cliente.endereco %></td>
          <td><%= cliente.cidade %></td>
          <td><%= cliente.uf %></td>
          <td><%= cliente.fone %></td>

          <td>
            <%= link_to cliente,:class => "btn btn-primary btn-xs" do%>
              <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            <% end %>
          </td>

          <td>
            <%= link_to edit_cliente_path(cliente), :class => "btn btn-primary btn-xs" do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <% end %>
          </td>

          <td>
            <%= link_to cliente, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
          </td>

        </tr>
      <% end %>
    </tbody>

    <div class="navbar navbar-right">
      <%= will_paginate @clientes, renderer: BootstrapPagination::Rails  %>
    </div>
  </table>

  <br>

  <div class="btn-group" >
      <%= link_to 'Voltar', root_path, :class => "btn btn-primary"  %>
      <%= link_to 'New Cliente', new_cliente_path, :class => "btn btn-success" %>
  </div>

</div>
