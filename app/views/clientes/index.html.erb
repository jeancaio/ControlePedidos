<div class="container">
  <p id="notice"><%= notice %></p>


  <h1>Clientes</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cpf</th>
        <th>Endereco</th>
        <th>Cidade</th>
        <th>Uf</th>
        <th>Fone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.nome %></td>
          <td><%= cliente.cpf %></td>
          <td><%= cliente.endereco %></td>
          <td><%= cliente.cidade %></td>
          <td><%= cliente.uf %></td>
          <td><%= cliente.fone %></td>
          <td><%= link_to 'Show', cliente,:class => "btn btn-default btn-xs"%></td>
          <td><%= link_to 'Edit', edit_cliente_path(cliente), :class => "btn btn-default btn-xs" %></td>
          <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
    <%= will_paginate @clientes, renderer: BootstrapPagination::Rails  %>
  </table>

  <br>

  <div class="btn-group" >
      <%= link_to 'Voltar', root_path, :class => "btn btn-default"  %>
      <%= link_to 'New Cliente', new_cliente_path, :class => "btn btn-default" %>
  </div>

</div>
