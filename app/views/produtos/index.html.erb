<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Produtos</h1>

  <table class="table">
    <thead>
      <tr>
        <th>CÃ³digo</th>
        <th>Descricao</th>
        <th>Preco</th>
        <th>Estoque</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @produtos.each do |produto| %>
        <tr>
          <td><%= produto.id %></td>
          <td><%= produto.descricao %></td>
          <td><%= produto.preco %></td>
          <td><%= produto.estoque %></td>
          <td><%= link_to 'Show', produto,:class => "btn btn-default btn-xs" %></td>
          <td><%= link_to 'Edit', edit_produto_path(produto), :class => "btn btn-default btn-xs" %></td>
          <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
    <div class="navbar navbar-right">
      <%= will_paginate @produtos, renderer: BootstrapPagination::Rails  %>
    </div>
  </table>

  <br>
  <div class="btn-group">
    <%= link_to 'Voltar', root_path,:class => "btn btn-default" %>
    <%= link_to 'New Produto', new_produto_path, :class => "btn btn-default" %>
  </div>
</div>
