<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Descricao:</strong>
    <%= @produto.descricao %>
  </p>

  <p>
    <strong>Preco:</strong>
    <%= @produto.preco %>
  </p>

  <p>
    <strong>Ativo:</strong>
    <%= @produto.ativo %>
  </p>

  <p>
    <strong>Estoque:</strong>
    <%= @produto.estoque %>
  </p>
  <p>
    <%= image_tag @produto.image.url(:medium) %>
  </p>
  <div class="btn-group">
    <%= link_to 'Edit', edit_produto_path(@produto), :class => "btn btn-primary" %>
    <%= link_to 'Back', produtos_path, :class => "btn btn-primary" %>
  </div>
</div>
